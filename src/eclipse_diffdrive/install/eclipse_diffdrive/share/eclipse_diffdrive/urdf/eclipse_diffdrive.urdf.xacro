<?xml version="1.0"?>
<robot name="eclipse_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ===== BASE ===== -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.4 0.3 0.1"/></geometry>
      <material name="blue"><color rgba="0.0 0.3 1.0 1.0"/></material>
    </visual>
    <collision>
      <geometry><box size="0.4 0.3 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" iyy="0.02" izz="0.02" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ===== WHEELS ===== -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}">
      <visual>
        <geometry><cylinder length="0.02" radius="0.05"/></geometry>
        <material name="black"><color rgba="0 0 0 1"/></material>
      </visual>
      <collision><geometry><cylinder length="0.02" radius="0.05"/></geometry></collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>
    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} -0.05" rpy="0 1.5708 0"/>
      <axis xyz="0 0 1"/>
    </joint>
  </xacro:macro>

  <xacro:wheel name="front_left_wheel"  x="0.15"  y="0.15"/>
  <xacro:wheel name="front_right_wheel" x="0.15"  y="-0.15"/>
  <xacro:wheel name="rear_left_wheel"   x="-0.15" y="0.15"/>
  <xacro:wheel name="rear_right_wheel"  x="-0.15" y="-0.15"/>

  <!-- ===== DIFF DRIVE PLUGIN ===== -->
  <gazebo>
    <plugin name="gz::sim::systems::DiffDrive" filename="gz-sim-diff-drive-system">
      <ros>
        <namespace>/</namespace>
      </ros>
      <left_joint>front_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <wheel_separation>0.3</wheel_separation>
      <wheel_radius>0.05</wheel_radius>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_odom>true</publish_odom>
      <publish_tf>true</publish_tf>
    </plugin>
  </gazebo>

  <!-- ===== LIDAR SENSOR ===== -->
  <gazebo reference="base_link">
    <sensor name="lidar_sensor" type="lidar">
      <always_on>true</always_on>
      <update_rate>10</update_rate>
      <visualize>true</visualize>
      <pose>0 0 0.1 0 0 0</pose>
      <topic>scan</topic>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>5.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <stddev>0.01</stddev>
        </noise>
      </ray>

      <!-- âœ… Required for Gazebo Sim 7 to actually publish /scan -->
      <plugin name="gz::sim::systems::Lidar" filename="gz-sim-lidar-system"/>
    </sensor>
  </gazebo>

</robot>

